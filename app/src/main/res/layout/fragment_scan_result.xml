<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scanResultFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sheet_bar"
        android:layout_gravity="top|center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_results"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="28sp"
        android:gravity="center"/>

    <!-- Your content here -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Your expandable and scrollable content here -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvScanResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                tools:listitem="@layout/scan_result_list_item" />

            <!-- Other views -->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
